generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model TestUser {
  id           Int            @id @default(autoincrement())
  createdAt    DateTime       @default(now())
  ip           String
  useragent    String // https://www.npmjs.com/package/next-useragent
  tests        Test[]
  demographics Demographics[]
}

model Test {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  testId     Int
  correct    Boolean
  durationMs Int
  TestUser   TestUser? @relation(fields: [testUserId], references: [id])
  testUserId Int?
}

model Demographics {
  id          Int          @id @default(autoincrement())
  createdAt   DateTime     @default(now())
  ageRange    AgeRange?
  gender      Gender?
  drivingTime DrivingTime?
  TestUser    TestUser?    @relation(fields: [testUserId], references: [id])
  testUserId  Int?
}

enum AgeRange {
  UNDER_10
  FROM_10_TO_15
  FROM_16_TO_24
  FROM_25_TO_34
  FROM_35_TO_44
  FROM_45_TO_54
  FROM_55_TO_64
  FROM_65_TO_74
  OVER_74
}

enum Gender {
  FEMALE
  MALE
  OTHER
}

enum DrivingTime {
  EVERY_DAY
  FROM_3_TO_6_DAYS_A_WEEK
  FROM_1_TO_2_DAYS_A_WEEK
  OCCASIONALLY
  NEVER
}
